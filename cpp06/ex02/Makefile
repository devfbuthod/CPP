# **************************************************************************** #
#                                    VARIABLES                                 #
# **************************************************************************** #

CC=clang++

CPPFLAGS=-Wall -Wextra -Werror

NAME=base

SRCS	=	./Base.cpp							

OBJS	=	$(SRCS:.cpp=.o)

RM		=	rm -f

# **************************************************************************** #
#                                    RULES                                     #
# **************************************************************************** #

%.cpp%.o:
				$(CC) $(CFLAGS) -cpp $< -o $@

all:            $(NAME)

$(OBJS):        $(INC)

$(NAME):        $(OBJS) $(HEADER)
				$(CC) $(CPPFLAGS) $(OBJS) -o $(NAME)

clean:
				$(RM) $(OBJS)

fclean:         clean
				$(RM) $(NAME)

re:             fclean all

.PHONY: